    <table class="table">
      <thead>
        <tr>
          <th> Image</th>
          <th> Name</th>
          <th> Description</th>
          <th>Quantity</th>
          <th> Item Total</th>
           
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <tr>
            <td>
              <%= image_tag line_item.product.image.tiny.url %>
            </td>
            <td>
              <h4><%= line_item.product.name %></h4>
            </td>
            <td>
              <p><%= line_item.product.description %></p>
            </td>
            <td>
              <%= line_item.quantity %>
            </td>
            <td>
              <%= humanized_money_with_symbol line_item.total_price %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
